doctype xml
widget(xmlns='http://www.w3.org/ns/widgets', id='ru.ugraweb.piknik2016', version='1.0.5')
  name ПикникХМ
  description Общественное мероприятие #ПикникХМ, меняй настроение своего города!
  author(email='ugraweb@gmail.com', href='http://ugraweb.ru') Ugraweb Team

  content(src='index.html')/

  plugin(name='cordova-plugin-whitelist', spec='1.2.2')/
  plugin(name='cordova-plugin-device', spec='1.1.2')/
  plugin(name='cordova-plugin-statusbar', spec='2.1.3')/
  plugin(name='cordova-plugin-splashscreen', spec='3.2.2')/
  plugin(name='cordova-plugin-geolocation', spec='2.2.0')/
  plugin(name='cordova-plugin-dialogs', spec='1.2.1')/
  plugin(name='pushwoosh-cordova-plugin', spec='https://github.com/phwb/pushwoosh-phonegap-plugin.git', source='git')/

  // status bar
  preference(name='StatusBarBackgroundColor', value='#212121')/

  // общие настройки приложения http://docs.phonegap.com/phonegap-build/configuring/preferences/
  preference(name='orientation', value='portrait')/
  preference(name='permissions', value='none')/
  preference(name='webviewbounce', value='false')/
  preference(name='DisallowOverscroll', value='true')/

  if (dev)
    // iOS only
    preference(name='target-device', value='universal')/
    preference(name='prerendered-icon', value='true')/
    preference(name='exit-on-suspend', value='false')/
    preference(name='detect-data-types', value='true')/
    preference(name='stay-in-webview', value='false')/

  // Android only
  preference(name='android-build-tool', value='gradle')/
  preference(name='android-minSdkVersion', value='19')/
  preference(name='android-installLocation', value='auto')/

  // настройки SplashScreen'а, вырубаем его по умолчанию
  preference(name='SplashScreenDelay', value='3000')/
  preference(name='FadeSplashScreenDuration', value='500')/
  preference(name='ShowSplashScreenSpinner', value='false')/

  icon(src='res/icon/icon.png')/
  splash(src='res/screen/hdpi.png')/

  platform(name='android')
    //
      ldpi    : 36x36 px
      mdpi    : 48x48 px
      hdpi    : 72x72 px
      xhdpi   : 96x96 px
      xxhdpi  : 144x144 px
      xxxhdpi : 192x192 px
    icon(src='res/icon/ldpi.png', density='ldpi')/
    icon(src='res/icon/mdpi.png', density='mdpi')/
    icon(src='res/icon/hdpi.png', density='hdpi')/
    icon(src='res/icon/xhdpi.png', density='xhdpi')/
    icon(src='res/icon/xxhdpi.png', density='xxhdpi')/
    icon(src='res/icon/xxxhdpi.png', density='xxxhdpi')/

    splash(src='res/screen/hdpi.png', density='port-hdpi')/
    splash(src='res/screen/ldpi.png', density='port-ldpi')/
    splash(src='res/screen/mdpi.png', density='port-mdpi')/
    splash(src='res/screen/xhdpi.png', density='port-xhdpi')/

  access(origin='*')/
  access(origin='*.pushwoosh.com')/

  allow-intent(href='http://*/*')/
  allow-intent(href='https://*/*')/
  allow-intent(href='tel:*')/
  allow-intent(href='sms:*')/
  allow-intent(href='mailto:*')/
  allow-intent(href='geo:*')/

  platform(name='android')
    allow-intent(href='market:*')/
